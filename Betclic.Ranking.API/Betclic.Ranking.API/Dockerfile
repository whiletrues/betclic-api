
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER app
WORKDIR /app
EXPOSE 8080

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["Betclic.Ranking.API/Betclic.Ranking.API.csproj", "Betclic.Ranking.API/"]
RUN dotnet restore "./Betclic.Ranking.API/./Betclic.Ranking.API.csproj"
COPY . .
WORKDIR "/src/Betclic.Ranking.API"
RUN dotnet build "./Betclic.Ranking.API.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./Betclic.Ranking.API.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Betclic.Ranking.API.dll"]